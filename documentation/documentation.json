{
  "openapi": "3.0.3",
  "info": {
    "title": "BingleShop RESTful API",
    "description": "",
    "version": ""
  },
  "servers": [
    {
      "url": "http://localhost:3000/api/"
    }
  ],
  "tags": [
    {
      "name": "user",
      "description": "User or authentication module"
    }
  ],
  "paths": {
    "/api/users/my-profile" : {
      "get" :{
        "tags" : [
          "user"
        ],
        "summary": "Get user data or profile by user email",
        "description": "This only can be done by logged user.",
        "operationId": "getUserByEmail",
        "security": [
          {
            "Token" :[]
          }
        ],
      "parameters": [
        {
          "in": "header",
          "name": "Authorization",
          "schema": {
            "type": "string"
          },
          "required": true,
          "example": "Bearer eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJzdWIiOiIxMjM0NTY3ODkwIiwiZW1haWwiOiJ1c2VyQGV4YW1wbGUuY29tIiwidXNlcklkIjoieHl6MTIzIiwiaWF0IjoxNTE2MjM5MDIyfQ.-UPyHhJuFwtDIokQnH4GsgNyEWB0Ix29mlC9aDhJ8ic"
        }
      ],
      "responses": {
        "200" : {
          "description": "Succesfull",
          "content": {
            "application/json" :{
              "schema":{
                "$ref": "#/components/schemas/User"
              }
            },
            "application/xml":{
              "schema":{
                "$ref": "#/components/schemas/User"
              }
            }
          }
        },
        "400" :{
          "description": "Invalid email supplied"
        },
        "404" : {
          "description": "User not found"
        }
      }
      },
      "put": {
        "tags": [
          "user"
        ],
        "summary": "Update user's data",
        "description": "This only can be done by logged user.",
        "operationId": "updateUser",
        "parameters": [
          {
            "in": "header",
            "name": "Authorization",
            "schema": {
              "type": "string"
            },
            "required": true,
            "example": "Bearer eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJzdWIiOiIxMjM0NTY3ODkwIiwiZW1haWwiOiJ1c2VyQGV4YW1wbGUuY29tIiwidXNlcklkIjoieHl6MTIzIiwiaWF0IjoxNTE2MjM5MDIyfQ.-UPyHhJuFwtDIokQnH4GsgNyEWB0Ix29mlC9aDhJ8ic"
          }
        ],
        "requestBody": {
          "description": "Update an existent user's data",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateUser"
              }
            },
            "application/xml": {
              "schema": {
                "$ref": "#/components/schemas/UpdateUser"
              }
            },
            "application/x-www-form-urlencoded": {
              "schema": {
                "$ref": "#/components/schemas/UpdateUser"
              }
            }
          }
        },
        "responses": {
          "200" : {
            "description": "Update Succesfull",
            "content": {
              "application/json" :{
                "schema":{
                  "$ref": "#/components/schemas/UpdatedUsersData"
                }
              },
              "application/xml":{
                "schema":{
                  "$ref": "#/components/schemas/UpdatedUsersData"
                }
              }
            }
          },
          "400" : {
            "description": "Failed to Update : Invalid properties"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "id":{
            "type": "integer",
            "format": "int64",
            "description": "Autogenerated",
            "example" : 1
          },
          "nickname":{
            "type": "string",
            "example" : "sab"
          },
          "email":{
            "type": "string",
            "example" : "sabrina@gmail.com"
          },
          "password":{
            "type": "string",
            "example" : "12345"
          },
          "phone_number":{
            "type": "string",
            "example": "081258888888"
          }
        },
        "xml": {
          "name": "user"
        }
      },
      "UpdateUser": {
        "type": "object",
        "properties": {
          "nickname":{
            "type": "string",
            "example" : "sabriiinaaa"
          },
          "phone_number":{
            "type": "string",
            "example": "081212341234"
          }
        }
    },
    "UpdatedUsersData": {
      "type": "object",
      "properties": {
        "id":{
          "type": "integer",
          "format": "int64",
          "description": "Autogenerated",
          "example" : 1
        },
        "nickname":{
          "type": "string",
          "example" : "sabriiinaaa"
        },
        "email":{
          "type": "string",
          "example" : "sabrina@gmail.com"
        },
        "password":{
          "type": "string",
          "example" : "12345"
        },
        "phone_number":{
          "type": "string",
          "example": "081212341234"
        }
      },
      "xml": {
        "name": "updatedUser"
      }
    }
  }
}
